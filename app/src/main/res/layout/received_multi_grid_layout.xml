<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_margin="5dp"
    android:background="@drawable/bg_dialog">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:textSize="22dp"
        android:gravity="center"
        android:textColor="@android:color/black"/>

    <EditText
        android:id="@+id/et_gift_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="35dp"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:hint="無留言"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="@drawable/bg_message"
        android:layout_below="@id/tv_date"
        android:layout_above="@id/ll_reward"/>

    <LinearLayout
        android:id="@+id/ll_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_reward"/>

        <TextView
            android:id="@+id/tv_reward_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="1911-01-01 00:00"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</RelativeLayout>